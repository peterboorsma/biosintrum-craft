{% set projecten = craft.entries()
    .section('projecten')
    .limit(10)
    .all() %}

<div class="container">
    <section class="grid blockProjecten">
        <header class="grid__header">
            <div class="content">
                <div class="compactTitle">Projecten</div>
            </div>
        </header>

        <div class="grid__content">
            <div class="swiper projects">
                <div class="swiper-wrapper">
                    {% for entry in projecten %}
                    <a class="card card--layered swiper-slide" href="{{ entry.url }}">
                        <div class="card__image">
                        {% if entry.image is defined and entry.image|length %}
                        {% import '_macros/_image.twig' as img %}

                        {{ img.responsiveImage(entry.image, {
                            maxWidth: 690,
                            cropMode: 'crop',
                            aspectRatio: '4:3'
                        }) }}
                        {% endif %}
                        </div>

                        <div class="card__header">
                            <span class="card__header__title">{{ entry.title }}</span>
                        </div>
                    </a>
                    {% endfor %}
                </div>

                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </div>

        <div class="grid__footer">
            <a href="{{ currentSite.baseUrl ~ 'projecten' }}" class="button button--forward button--large">Projecten</a>
        </div>
    </section>
</div>



{% block styles %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@12/swiper-bundle.min.css" />
{% endblock styles %}

{% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    {% minify %}
    <script>
        var swiper = new Swiper(".projects", {
            slidesPerView: 1.25,
            spaceBetween: 20,
            a11y: {
            prevSlideMessage: 'Vorige slide',
            nextSlideMessage: 'Volgende slide',
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            breakpoints: {
                600: {
                slidesPerView: 1.5,
                },
                1024: {
                slidesPerView: 2.5,
                spaceBetween: 40,
                },
                1200: {
                slidesPerView: 3.5,
                spaceBetween: 40,
                },
            },
            loop: false,
        }
        );
    </script>
    {% endminify %}
{% endblock %}