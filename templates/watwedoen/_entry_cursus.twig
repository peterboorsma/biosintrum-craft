{% extends "_layouts/default" %}

{% if entry.pageTheme is defined and entry.pageTheme %}
    {% set pageTheme = 'theme--' ~ entry.pageTheme %}
{% else %}
    {% set pageTheme = 'theme--default' %}
{% endif %}

{% block bodyclass %}{{pageTheme}}{% endblock %}

{% block content %}
<div class="hero">
    <div class="hero__top">
        <div class="hero__top__banner">
            {% if entry.image is defined and entry.image|length %}
            {% import '_macros/_image.twig' as img %}
            <div class="heroImage">
                {{ img.responsiveImage(entry.image, { maxWidth: 1600, aspectRatio: '16:8', cropMode: 'crop' }) }}
            </div>
            {% endif %}
        </div>
    </div>

    <div class="container">
        <div class="hero__bottom grid grid--compact">
            <div class="heroTitle">
                <span>{{ entry.payoff }}</span>
            </div>
        </div>
    </div>
</div>

<div class="mainContent mainContent--hasHero">
    <div class="container">
        <article class="grid grid--compact article">
            {% include '_macros/_nav_breadcrumbs' %}

            <header class="article__header">
                <div class="article__header__title">
                    <h1>{{ entry.title }}</h1>
                </div>
            </header>

            {% if entry.intro %}
            <div class="article__introduction">
                <div class="content cKcontent contentSizeMedium">
                    {{ entry.intro }}
                </div>
            </div>
            {% endif %}

            {% include '_macros/_contentstream' %}
        </article>
    </div>
</div>
{% endblock %}

{% block scripts %}
{% endblock %}