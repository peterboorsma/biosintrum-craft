<div class="mainContent">
    <div class="container">
        <article class="grid grid--compact article">
            {% include '_components/_nav_breadcrumbs' %}

            <header class="article__header">
                <div class="article__header__title">
                    <h1>{{ entry.title }}</h1>
                </div>
            </header>

            {% if entry.intro %}
            <div class="article__introduction">
                <div class="content contentSizeMedium">
                    {{ entry.intro }}
                </div>
            </div>
            {% endif %}

            {% if entry.image[0] is defined and entry.image[0] %}
            <figure class="article__mainImage{% if entry.image[0].title %} article__mainImage--withCaption{% else %} article__mainImage--withoutCaption{% endif %}">
                {% import '_macros/_image.twig' as img %}
                {{ img.responsiveImage(entry.image, { maxWidth: 940 }) }}

                {% if entry.image[0].title %}
                    <figcaption class="caption">{{ entry.image[0].title }}</figcaption>
                {% endif %}
            </figure>
            {% endif %}

            {# Toon children met entrytype handle "ruimtes" als die er zijn #}
            {% set children = entry.getChildren() %}
            {% set ruimtesChildren = children | filter(child => child.type.handle == 'ruimtes') %}
            {% if ruimtesChildren | length %}
                {% include '_components/_article_ruimtes' %}
            {% endif %}

            {% include '_macros/_contentstream' %}

            {% if entry.slug == 'reserveren' %}
            {% include '_components/_article_addressBlock' %}

            {% include '_components/_block_tarievenlijst' %}

            {% set ruimtes = craft.entries.section('watwedoen').type('ruimtes').all() %}
            {% include '_components/_article_ruimtes' with { ruimtesChildren: ruimtes } %}
            {% endif %}

            
        </article>
    </div>
</div>