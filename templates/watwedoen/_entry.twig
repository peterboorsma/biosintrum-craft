{% extends "_layouts/default" %}

{% block bodyclass %}{% endblock %}

{% block content %}

{# Structure met 3 levels: TopLevel (geen parent), SubLevel (heeft parent en kinderen), BottomLevel (heeft parent, geen kinderen) #}
{% if not entry.parent %}
    {# TopLevel: geen parent #}
    {% include '/watwedoen/_entryTopLevel' %}
{% elseif entry.getChildren() | length > 0 %}
    {# SubLevel: heeft parent en kinderen #}
    {% include '/watwedoen/_entrySubLevel' %}
{% else %}
    {# BottomLevel: heeft parent, geen kinderen #}
    {% include '/watwedoen/_entryBottomLevel' %}
{% endif %}

{% endblock %}

{% block scripts %}
{% endblock %}